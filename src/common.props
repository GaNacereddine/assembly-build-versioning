<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- Defines common/shared assembly and NuGet package metadata. -->
  <PropertyGroup>
    <Product>SABOL Web</Product>
    <Company>Siemens</Company>
    <Copyright>Copyright (c) 2015</Copyright>
  </PropertyGroup>

  <!-- Defines version related properties. -->
  <PropertyGroup>
    <VersionMajor>2</VersionMajor>
    <VersionMinor>0</VersionMinor>
  </PropertyGroup>

  <PropertyGroup>
    <!-- The $(VersionPatch), $(VersionRevision), $(CI_BUILD_NUMBER), and
    $(BuildDate) properties are typically defined by an automated (CI) build in
    the build/version.props file. Setting them here will override those values.
    -->
  </PropertyGroup>

  <PropertyGroup>
    <VersionPrefix>$(VersionMajor).$(VersionMinor)</VersionPrefix>
    <VersionSuffix></VersionSuffix>
  </PropertyGroup>

  <!-- Defines properties which help customize the version update process. -->
  <PropertyGroup>
    <GenerateReleaseNotes Condition="'$(GenerateReleaseNotes)' == ''">true</GenerateReleaseNotes>
    <GenerateAssemblyBuildDateAttribute Condition="'$(GenerateAssemblyBuildDateAttribute)' == ''">true</GenerateAssemblyBuildDateAttribute>
  </PropertyGroup>

  <!-- The UpdateReleaseNotes target expects a single XML file as input and
  one or more destination folders as output, as defined by the ItemGroup.
  Uncomment this item group and change the path as necessary. -->
  <ItemGroup Condition="'$(GenerateReleaseNotes)' == 'true'">
    <ReleaseNotes Include="$(SolutionDir)/ReleaseNotes.xml" />
    <DestinationFolders Include="$(SolutionDir)/SABOL.Web.Siemens/App_Data" />
  </ItemGroup>
</Project>
